# SPDX-License-Identifier: Apache-2.0
#
# CONTEXT: Containerized build environment for Open Nexus OS (toolchain + QEMU + security/lint tools).
# OWNERS: @tools-team
# STATUS: Functional
# API_STABILITY: Stable
# TEST_COVERAGE: No tests
# ADR: docs/architecture/02-selftest-and-ci.md

FROM debian:stable-slim

ARG USER=builder
ARG UID=1000

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        ca-certificates \
        curl \
        build-essential \
        pkg-config \
        git \
        python3 \
        python3-pip \
        capnproto \
        flatbuffers-compiler \
        qemu-system-misc \
        qemu-system-riscv64 \
        gdb \
        mold \
        libssl-dev \
    && rm -rf /var/lib/apt/lists/*

RUN useradd -m -u ${UID} ${USER}
WORKDIR /workspace

ENV RUSTUP_HOME=/home/${USER}/.rustup
ENV CARGO_HOME=/home/${USER}/.cargo
ENV PATH=${CARGO_HOME}/bin:${PATH}

ARG CARGO_DENY_VERSION=0.18.9
ARG DENY_TOOLCHAIN=1.88.0

RUN curl https://sh.rustup.rs -sSf | sh -s -- -y --profile minimal --default-toolchain stable
RUN rustup target add riscv64imac-unknown-none-elf --toolchain nightly-2025-01-15
RUN rustup toolchain install nightly-2025-01-15 --profile minimal
RUN rustup target add riscv64imac-unknown-none-elf --toolchain stable
RUN rustup toolchain install ${DENY_TOOLCHAIN} --profile minimal
RUN cargo +${DENY_TOOLCHAIN} install --locked cargo-deny --version ${CARGO_DENY_VERSION}
RUN cargo install --locked cargo-udeps cargo-nextest cargo-fuzz
RUN chmod -R a+rx /home/${USER}/.rustup /home/${USER}/.cargo && \
    ln -sf /home/${USER}/.cargo/bin/* /usr/local/bin/

COPY podman/entrypoint.sh /entrypoint.sh
ENTRYPOINT ["/entrypoint.sh"]
